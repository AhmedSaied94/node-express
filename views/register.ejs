<div class="row my-5">
    <div class="col-12 col-sm-6 offset-sm-3">
        <%- include('partials/messegs.ejs') %>
        <form class="mx-auto" action="/users/register" method="POST">
            <fieldset>
            <div class="form-group">
                <label for="InputName" class="form-label mt-4">Name</label>
                <input type="name" class="form-control" id="InputName" aria-describedby="nameHelp" name="name" value="<%= typeof name != 'undefined' ? name : '' %>" placeholder="Enter Name">
            </div>
            <div class="form-group">
                <label for="InputEmail" class="form-label mt-4">Email address</label>
                <input type="email" class="form-control" id="InputEmail" aria-describedby="emailHelp" name="email" value="<%= typeof email != 'undefined' ? email : '' %>" placeholder="Enter email">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="InputPassword" class="form-label mt-4">Password</label>
                <input type="password" class="form-control" id="InputPassword" name="password" value="<%= typeof password != 'undefined' ? password : '' %>" placeholder="Password">
            </div>
            <div class="form-group">
                <label for="InputPassword2" class="form-label mt-4">Re-password</label>
                <input type="password" class="form-control" id="InputPassword2" name="password2" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" placeholder="Password" placeholder="Re-Password">
            </div>
            <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-dark">Sign up</button>
            </div>
            </fieldset>
            
        </form>
    </div>
</div>